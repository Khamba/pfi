<div class="container">
  <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @specialities.each do |speciality| %>
        <tr>
          <td><%= link_to speciality.name, speciality_path(speciality) %></td>
          <td><%= link_to("Edit", edit_speciality_path(speciality)) %></td>
          <td><%= link_to("Delete", speciality_path(speciality), method: :delete) %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>

  <p><%= link_to "New Speciality", new_speciality_path %></p>
  <%= will_paginate @specialities %>
</div>
