<div class="container">
  <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td><%= link_to hospital.name, hospital_path(hospital) %></td>
          <td><%= hospital.address.city + ", " + hospital.address.state %></td>
          <td><%= link_to("Edit", edit_hospital_path(hospital)) %></td>
          <td><%= link_to("Delete", hospital_path(hospital), method: :delete) %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>

  <p><%= link_to "New Hospital", new_hospital_path %></p>
  <%= will_paginate @hospitals %>
</div>
